
@model doan_dbsm.Models.DATA.PRODUCT

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/admin/Views/Shared/Sharelayout.cshtml";
}

<h4 class="mt-2">
    Edit Product
</h4>
@using (Html.BeginForm("edit", "quanlysanpham", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

<form id="demo-form" data-parsley-validate class="form-horizontal form-label-left mt-5 pt-3">

    <div class="item form-group" style="display:none">
        <label class="col-form-label col-md-3 col-sm-3 label-align" for="first-name">
            Product_name <span class="required">*</span>
        </label>
        <div class="col-md-6 col-sm-6 ">
            <input type="text" id="first-name" required="required" class="form-control " name="product_id" value="@Model.product_id">
        </div>
    </div>
    <div class="item form-group">
        <label class="col-form-label col-md-3 col-sm-3 label-align" for="first-name">
            Product_name <span class="required">*</span>
        </label>
        <div class="col-md-6 col-sm-6 ">
            <input type="text" id="first-name" required="required" class="form-control " name="product_Name" value="@Model.product_Name">
        </div>
    </div>
    <div class="item form-group">
        <label class="col-form-label col-md-3 col-sm-3 label-align" for="last-name">
            Prices($) <span class="required">*</span>
        </label>
        <div class="col-md-6 col-sm-6 ">
            <input type="number" value="@Model.prices" id="last-name" name="prices" required="required" class="form-control">
        </div>
    </div>
    <div class="item form-group">
        <label class="col-form-label col-md-3 col-sm-3 label-align" for="last-name">
            Count <span class="required">*</span>
        </label>
        <div class="col-md-6 col-sm-6 ">
            <input type="number" id="last-name" value="@Model.count" name="count" required="required" class="form-control">
        </div>
    </div>
    <div class="item form-group">
        <label class="col-form-label col-md-3 col-sm-3 label-align" for="last-name">
            Group_Name <span class="required">*</span>
        </label>
        <div class="col-md-6 col-sm-6 ">
            <select class="form-control" name="gr_groupid">
                @if (Model.PRODUCT_GROUP.gr_groupname == "Man")
                {
                    <option>Man</option>
                    <option>Woman</option>
                }

                else if (Model.PRODUCT_GROUP.gr_groupname == "Woman")
                {
                    <option>Woman</option>
                    <option>Man</option>

                }

            </select>
        </div>
    </div>
    <div class="item form-group">
        <label class="col-form-label col-md-3 col-sm-3 label-align" for="last-name">
            Description <span class="required">*</span>
        </label>
        <div class="col-md-6 col-sm-6 ">
            <textarea class="form-control" id="exampleFormControlTextarea1" rows="2" name="Description">@Model.Description</textarea>
        </div>
    </div>




    <div class="item form-group">
        <label class="col-form-label col-md-3 col-sm-3 label-align mt-4" for="last-name">
            Image  <span class="required">*</span>
        </label>

        <div class="col-md-6 col-sm-6 ">
            <input type="file" name="hinhanh" id="file-3" class="" style=""
                   data-multiple-caption="{count} files selected" multiple />
            <img src="@Url.Content("/images/"+Model.image)" alt="IMG-BANNER" width="64">

            @*<label for="file-3">
                    inputfile inputfile-3
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="17" viewBox="0 0 20 17">
                        <path d="M10 0l-5.2 4.9h3.3v5.1h3.8v-5.1h3.3l-5.2-4.9zm9.3 11.5l-3.2-2.1h-2l3.4 2.6h-3.5c-.1 0-.2.1-.2.1l-.8 2.3h-6l-.8-2.2c-.1-.1-.1-.2-.2-.2h-3.6l3.4-2.6h-2l-3.2 2.1c-.4.3-.7 1-.6 1.5l.6 3.1c.1.5.7.9 1.2.9h16.3c.6 0 1.1-.4 1.3-.9l.6-3.1c.1-.5-.2-1.2-.7-1.5z" />
                    </svg> <span>Choose a image</span>
                </label>*@
        </div>

    </div>






    <div class="ln_solid"></div>
    <div class="item form-group">
        <div class="col-md-6 col-sm-6 offset-md-3">
            <a class="btn btn-primary text-light" href="@Url.Action("Index","quanlysanpham")">Cancel</a>
            <button class="btn btn-primary" type="reset">Reset</button>
            <button type="submit" class="btn btn-success">Submit</button>
        </div>
    </div>

</form>



}
